# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"  # Optional: leave empty for regional cluster

# Cluster Configuration
cluster_name = "pomerium-demo-cluster"

# Node Pool Configuration
node_count       = 3
min_node_count   = 1
max_node_count   = 5
machine_type     = "e2-standard-4"
disk_size_gb     = 100
preemptible_nodes = false  # Set to true for cost savings in dev/test

# Network Configuration
subnet_cidr            = "10.0.0.0/24"
pods_cidr              = "10.1.0.0/16"
services_cidr          = "10.2.0.0/16"
master_ipv4_cidr_block = "172.16.0.0/28"

# Security Configuration
enable_private_nodes    = true
enable_private_endpoint = false  # Set to true for production
enable_network_policy   = true
enable_binary_authorization = false

# Authorized networks for API server access
# Replace with your actual IP ranges for production
authorized_networks = [
  {
    cidr_block   = "0.0.0.0/0"
    display_name = "all"
  }
]

# Monitoring
enable_managed_prometheus = true

# Release Channel (RAPID, REGULAR, or STABLE)
release_channel = "REGULAR"

# Node Labels
node_labels = {
  environment = "demo"
  purpose     = "pomerium"
}

# SSH Demo VM
enable_ssh_vm = true